<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vxestate.prototypelabflow.ProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@color/blue"
        android:id="@+id/imageView2"
        android:layout_marginBottom="420dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/full_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="30dp" />

        <ImageView
            app:srcCompat="@drawable/nameicon"
            android:id="@+id/imageView5"
            android:foregroundGravity="center"
            android:layout_gravity="center"
            android:layout_height="105dp"
            android:layout_width="105dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/account"
                android:id="@+id/imageView6"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:textSize="25sp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="15dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:background="@color/cardview_shadow_start_color"
            android:layout_alignTop="@+id/mapFragment"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:id="@+id/view"
            android:layout_height="2dp"></View>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/number"
                android:id="@+id/imageView7"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/student_num"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:background="@color/cardview_shadow_start_color"
            android:layout_alignTop="@+id/mapFragment"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:id="@+id/view1"
            android:layout_height="2dp"></View>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/schedule"
                android:id="@+id/imageView9"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bookSchedule"
                android:text="Book Schedule"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:background="@color/cardview_shadow_start_color"
            android:layout_alignTop="@+id/mapFragment"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:id="@+id/view3"
            android:layout_height="2dp"></View>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/appointment"
                android:id="@+id/imageView8"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myAppointment"
                android:text="My Appointment"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:background="@color/cardview_shadow_start_color"
            android:layout_alignTop="@+id/mapFragment"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:id="@+id/view2"
            android:layout_height="2dp"></View>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@id/navigation_view"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
